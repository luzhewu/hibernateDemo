<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="cn.bdqn.bean">
	<class name="District">
		<id name="id" >
			<generator class="assigned"/>
		</id>
		<property name="name"/>
		<!-- 设置一对多
		name:本类中的关联属性名，集合的名称
		column:就是数据库表中的外键
		order-by="id desc":按照街道的id进行降序排列
		inverse:是由谁来维护表与表之间的关系！默认是false(维护)，true(不维护)  -->
		<bag name="streets" cascade="all" inverse="true" order-by="id desc">
			<key column="districtId"/>
			<one-to-many class="Street"/>
		</bag>
	</class>
</hibernate-mapping>
